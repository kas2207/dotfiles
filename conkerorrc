// Hinting
hint_digits="abcdefghijklmnopqrstuvwxyz";
hints_minibuffer_annotation_mode(true);

// Emacs as external editor
editor_shell_command = "emacs";
view_source_use_external_editor = true;

// Mode Line
mode_line_mode(false);
