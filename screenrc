shell -${SHELL}
defscrollback 5000
startup_message off
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{G}][%= %{= kw}%-Lw%{r}(%{W}%n%f %t%?(%u)%?%{r})%{w}%+Lw%?%= %{G}][%{B}%Y-%m-%d %{W}%c %{G}]'

term screen-256color

# Default screens
screen -t Gauss1            0
screen -t Gauss2            1
screen -t axa               2           ssh axa
screen -t app               3           ssh appserver
